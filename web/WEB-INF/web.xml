<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>new_user</servlet-name>
        <servlet-class>controllers.new_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controllers.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>crear_cuenta</servlet-name>
        <servlet-class>controllers.crear_cuenta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>vincular_cuenta</servlet-name>
        <servlet-class>controllers.vincular_cuenta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deposito</servlet-name>
        <servlet-class>controllers.deposito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>retiro</servlet-name>
        <servlet-class>controllers.retiro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>transferencia</servlet-name>
        <servlet-class>controllers.transferencia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>acredtar_intereses</servlet-name>
        <servlet-class>controllers.acredtar_intereses</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>new_user</servlet-name>
        <url-pattern>/new_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crear_cuenta</servlet-name>
        <url-pattern>/crear_cuenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vincular_cuenta</servlet-name>
        <url-pattern>/vincular_cuenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deposito</servlet-name>
        <url-pattern>/deposito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>retiro</servlet-name>
        <url-pattern>/retiro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>transferencia</servlet-name>
        <url-pattern>/transferencia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>acredtar_intereses</servlet-name>
        <url-pattern>/acredtar_intereses</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
